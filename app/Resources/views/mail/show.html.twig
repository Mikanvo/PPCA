    {% block page_content %}
    {% form_theme show_form ':widget:fields.html.twig' %}
    <a class="btn btn-xs yellow btn-outline sbold" data-toggle="modal" href="#show{{ mail.id }}"><i class="fa fa-list-alt"></i>  Aperçu </a>
    <div class="modal fade" id="show{{ mail.id }}" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Aperçu du mail </h4>
                </div>
                {{ form_start(show_form, {'attr': {'class':'form-horizontal', 'role':'form'}}) }}
                <div class="modal-body">
                    {{ form_widget(show_form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Fermer</button>
                    <!--<button type="button" class="btn green">Save changes</button>-->
                </div>
                {{ form_end(show_form) }}
            </div>
        </div>
    </div>
    {% endblock %}
