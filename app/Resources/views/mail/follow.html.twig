{% block page_content %}
    {% form_theme follow_form ':widget:fields.html.twig' %}
    <a class="btn red btn-outline sbold" data-toggle="modal" href="#edit{{ mail.id }}"> Modifier </a>
    <div class="modal fade" id="edit{{ mail.id }}" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Faire suivre Mail </h4>
                </div>
                {{ form_start(follow_form, {'attr': {'class':'form-horizontal', 'role':'form'}}) }}
                <div class="modal-body">
                    {{ form_widget(follow_form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn blue">Modifier</button>
                </div>
                {{ form_end(follow_form) }}
            </div>
        </div>
    </div>
{% endblock %}
