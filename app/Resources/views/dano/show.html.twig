{% block page_content %}
    {% form_theme show_form ':widget:fields-block.html.twig' %}
    <a class="btn yellow btn-outline sbold" data-toggle="modal" href="#show{{ dano.id }}"> <i class="fa fa-list-alt"></i>  </a>
    <div class="modal fade" id="show{{ dano.id }}" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">DÃ©tails Dano </h4>
                </div>
                {{ form_start(show_form, {'attr': {'class':'form', 'role':'form'}}) }}
                <div class="modal-body">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">{{ form_row(show_form.activite) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(show_form.numero) }}</div>
                            <div class="col-md-6">{{ form_row(show_form.destinataire) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(show_form.objet) }}</div>
                            <div class="col-md-6">{{ form_row(show_form.requete) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(show_form.datereception) }}</div>
                            <div class="col-md-6">{#{{ form_row(show_form.expediteur) }}#}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(show_form.beneficiaire) }}</div>
                            <div class="col-md-6">{{ form_row(show_form.description) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{ form_row(show_form.observationPTBA) }}</div>
                            <div class="col-md-6">{{ form_row(show_form.observationPPM) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">{{ form_row(show_form.corps) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">{{ form_row(show_form.observation) }}</div>
                        </div>
                        <div class="row">
                            {#<div class="col-md-12">{{ form_row(show_form.piecejointe) }}</div>#}
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Fermer</button>
                </div>
                {{ form_end(show_form) }}
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
{% endblock %}
