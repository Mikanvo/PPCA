{% block page_content %}
    {% form_theme edit_form ':widget:fields.html.twig' %}
    <a class="btn yellow-gold sbold" data-toggle="modal" href="#edit{{ composante.id }}"> Modifier </a>
    <div class="modal fade" id="edit{{ composante.id }}" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Modification Composante </h4>
                </div>
                {{ form_start(edit_form, {'attr': {'class':'form-horizontal', 'role':'form'}}) }}
                        <div class="modal-body">
                            {{ form_widget(edit_form) }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal">Annuler</button>
                            <!--<button type="button" class="btn green">Save changes</button>-->
                            <input type="submit" class="btn blue" value="Modifier" />
                        </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
