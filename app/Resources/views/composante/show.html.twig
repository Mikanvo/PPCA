{% extends ':default:index.html.twig' %}

{% block page_content %}
    {% form_theme show_form ':widget:fields.html.twig' %}
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject font-dark sbold uppercase">Details Composante</span>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided" data-toggle="buttons">
                            <label class="btn btn-transparent dark btn-outline btn-circle btn-sm active">
                                <input type="radio" name="options" class="toggle" id="option1">Actions</label>
                            <label class="btn btn-transparent dark btn-outline btn-circle btn-sm">
                                <input type="radio" name="options" class="toggle" id="option2">Settings</label>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    {{ form_start(show_form, {'attr': {'class':'form-horizontal', 'role':'form'}}) }}
                        <div class="form-body">
                            {{ form_widget(show_form) }}
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="button" value="Annuler" />
                                </div>
                            </div>
                        </div>

                            {{ form_end(show_form) }}
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('admin_parametre_composante_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_parametre_composante_edit', { 'id': composante.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
